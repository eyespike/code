<interface>
  <object id="window" class="GtkWindow">
    <property name="visible">True</property>
    <property name="title">Thermo Defender</property>
    <property name="border-width">20</property>
	<child>
      <object id="grid" class="GtkGrid">
        <property name="visible">True</property>
        
		<child>
          <object id="lblWaterTcDiff" class="GtkLabel">
            <property name="visible">True</property>
            <property name="label">Water Temp Diff</property>
          </object>
          <packing>
            <property name="left-attach">0</property>
            <property name="top-attach">0</property>
          </packing>
        </child>
		<child>
          <object id="lblFireTcDiff" class="GtkLabel">
            <property name="visible">True</property>
            <property name="label">Fire Temp Diff</property>
          </object>
          <packing>
            <property name="left-attach">1</property>
            <property name="top-attach">0</property>
          </packing>
        </child>
		<child>
          <object id="lblPixelCount" class="GtkLabel">
            <property name="visible">True</property>
            <property name="label">Min Pixel Count</property>
          </object>
          <packing>
            <property name="left-attach">2</property>
            <property name="top-attach">0</property>
          </packing>
        </child>
		
		<child>
		  <object class="GtkBox">
				<property name="visible">True</property>
				<property name="border-width">5</property>
				<child>
					<object id="eWaterTcDiff" class="GtkEntry">
						<property name="visible">True</property>
					</object>
				</child>
			</object>
          <packing>
            <property name="left-attach">0</property>
            <property name="top-attach">1</property>
          </packing>
        </child>
		<child>
          <object class="GtkBox">
				<property name="visible">True</property>
				<property name="border-width">5</property>
				<child>
					<object id="eFireTcDiff" class="GtkEntry">
						<property name="visible">True</property>
					</object>
				</child>
			</object>
          <packing>
            <property name="left-attach">1</property>
            <property name="top-attach">1</property>
          </packing>
        </child>
		<child>
          <object class="GtkBox">
				<property name="visible">True</property>
				<property name="border-width">5</property>
				<child>
					<object id="eMinPixelCount" class="GtkEntry">
						<property name="visible">True</property>
					</object>
				</child>
			</object>
          <packing>
            <property name="left-attach">2</property>
            <property name="top-attach">1</property>
          </packing>
        </child>
		<child>
          <object id="btnSetVariables" class="GtkButton">
            <property name="visible">True</property>
            <property name="label">Set</property>
			<property name="border-width">5</property>
          </object>
          <packing>
            <property name="left-attach">3</property>
            <property name="top-attach">1</property>
          </packing>
        </child>
		
		
		<child>
		  <object class="GtkHSeparator" id="hseparator1">
			<property name="height_request">30</property>
			<property name="visible">True</property>
			<property name="can_focus">False</property>
		  </object>
		  <packing>
            <property name="left-attach">0</property>
            <property name="top-attach">2</property>
			<property name="width">4</property>
          </packing>
		</child>
		
		
		<child>
          <object id="btnCaptureFrame" class="GtkButton">
            <property name="visible">True</property>
            <property name="label">Capture Single Frame</property>
			<property name="border-width">5</property>
          </object>
          <packing>
            <property name="left-attach">0</property>
            <property name="top-attach">3</property>
          </packing>
        </child>
		<child>
          <object id="btnStartMonitor" class="GtkButton">
            <property name="visible">True</property>
            <property name="label">Monitor</property>
			<property name="border-width">5</property>
          </object>
          <packing>
            <property name="left-attach">1</property>
            <property name="top-attach">3</property>
          </packing>
        </child>
		<child>
          <object id="statuslabel" class="GtkLabel">
            <property name="visible">True</property>
            <property name="label">Inactive</property>
          </object>
          <packing>
            <property name="left-attach">2</property>
            <property name="top-attach">3</property>
          </packing>
        </child>
		<child>
			<object class="GtkBox">
				<property name="visible">True</property>
				<property name="border-width">5</property>
				
				<child>
                  <object class="GtkImage" id="captureImage">
                    <property name="visible">True</property>
                    
                  </object>
                </child>				
			</object>
          <packing>
            <property name="left-attach">0</property>
            <property name="top-attach">4</property>
			<property name="width">4</property>
          </packing>
        </child>
		
        
        <child>
          <object id="quit" class="GtkButton">
            <property name="visible">True</property>
            <property name="label">Quit</property>
			<property name="border-width">5</property>
          </object>
          <packing>
            <property name="left-attach">0</property>
            <property name="top-attach">5</property>
            <property name="width">1</property>
			
          </packing>
        </child>
      </object>
      <packing>
      </packing>
    </child>
  </object>
</interface>
